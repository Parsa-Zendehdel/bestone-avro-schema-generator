<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>bestone-avro-schema-generator</artifactId>
    <groupId>com.bestseller.bestone.bi4.avroschemagenerator</groupId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>gen-avro-schema-cmd</artifactId>
  <name>gen-avro-schema-cmd</name>
  <version>0.0.1-SNAPSHOT</version>
  <description>gen-avro-schema-cmd</description>
  <developers>
    <developer />
  </developers>
  <licenses>
    <license />
  </licenses>
  <scm />
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.avro</groupId>
        <artifactId>avro-maven-plugin</artifactId>
        <version>1.10.2</version>
        <configuration>
          <enableDecimalLogicalType>true</enableDecimalLogicalType>
          <stringType>String</stringType>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <id>default-shade</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.bestseller.bestone.bi4.avroschemagenerator.genavroschemacmd.GenAvroSchemaCmdApplication</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.apache.avro</groupId>
      <artifactId>avro</artifactId>
      <version>1.12.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-slf4j-impl</artifactId>
      <version>2.14.1</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>slf4j-api</artifactId>
          <groupId>org.slf4j</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.bestseller.bestone.bi4.sales.standardutils</groupId>
      <artifactId>kafka-utils</artifactId>
      <version>3.2.2.149</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.bestseller.bestone.bi4.system.infra</groupId>
      <artifactId>mqjavacontracts</artifactId>
      <version>0.0.329</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.bestseller.bestone.bi4.system.infra.messagefuser</groupId>
      <artifactId>messagefuser-spring-boot-starter</artifactId>
      <version>3.2.2.111</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>mqjavacontracts</artifactId>
          <groupId>com.bestseller.bestone.bi4.system.infra</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <java.version>21</java.version>
  </properties>
</project>
